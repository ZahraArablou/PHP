{% extends "admin/base.html.twig" %}

{% block title %}User List{% endblock%}

{% block body %}
              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="icon_profile"></i>Id</th>
                    <th><i class="icon_profile"></i>First Name</th>
                    <th><i class="icon_profile"></i>Last Name</th>
                    <th><i class="icon_mail_alt"></i>Email</th>
                    <th><i class="icon_profile"></i>Username</th>
                    <th><i class="icon_mobile"></i>Phone number</th>
                    <th><i class="icon_calendar"></i>Gender</th>
                    <th><i class="icon_calendar"></i>JoinTime</th>
                    <th><i class="icon_pin_alt"></i>Street</th>
                    <th><i class="icon_pin_alt"></i>City</th>
                    <th><i class="icon_pin_alt"></i>Province</th>
                    <th><i class="icon_pin_alt"></i>Postal Code</th>
                    <th><i class="icon_calendar"></i>Role Type</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                    {% for u in usersList %}
                        <tr>
                            <td>{{u.id}}</td>
                            <td>{{u.firstName}}</td>
                            <td>{{u.lastName}}</td>
                            <td>{{u.email}}</td>
                            <td>{{u.username}}</td>
                            <td>{{u.phoneNumber}}</td>
                            <td>{{u.gender}}</td>
                            <td>{{u.joinTime}}</td>
                            <td>{{u.street}}</td>
                            <td>{{u.city}}</td>
                            <td>{{u.province}}</td>
                            <td>{{u.postalCode}}</td>
                            <td>{{u.roleType}}</td>
                            <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" href="/admin/users/add"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success" href="/admin/users/edit/{{u.id}}"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger" href="/{{u.id}}/delete"><i class="icon_close_alt2"></i></a>
                            </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>

{% endblock %}
