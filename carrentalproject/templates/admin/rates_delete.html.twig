{% block title %}Car Delete{% endblock%}
{% block bodytitle %}User Information{% endblock %}
{% block content %}
<div class="container">

    <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th>Id</th>
                    <th>Car Id</th>
                    <th>Daily Hour</th>
                    <th>Kilometer Rate</th>
                  </tr>
                    <tr>
                      <td>{{rate.id}}</td>
                      <td>{{rate.carId}}</td>
                      <td>{{rate.byDay}}</td>
                      <td>{{rate.byKilometer}}</td>
                    </tr>
            </tbody>
        </table>
 <form method="post">
          <p>Please confirm this action. It is irreversible</p>
          <button type="submit" class="btn btn-danger btn-lg btn-block">Yes, delete the rates</button>
        <a class="btn btn-success btn-lg btn-block"  style="background: #a6ca63;" href="/admin/rate/list">Cancel - go back to the list</a>
  </form>
</div>

{% endblock %}
