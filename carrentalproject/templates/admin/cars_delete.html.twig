{% extends "admin/masterAdmin.html.twig" %}
{% block title %}Car Delete{% endblock%}
{% block bodytitle %}Car Information{% endblock %}
{% block content %}

<div class="container">
    <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th>Id</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Model Year</th>
                    <th>Image</th>
                    <th>Availability</th>
                  </tr>
                    <tr>
                      <td>{{car.id}}</td>
                      <td>{{car.make}}</td>
                      <td>{{car.modelName}}</td>
                      <td>{{car.modelYear}}</td>
                      <td><img src="/uploads/{{car.imageFilePath}}"/></td>
                      <td>{{car.availability}}</td>
                    </tr>
            </tbody>
        </table>
 <form method="post">
          <p>Please confirm this action. It is irreversible</p>
          <button type="submit" class="btn btn-danger btn-lg btn-block" >Yes, delete the car</button>
        <a class="btn btn-success btn-lg btn-block"  style="background: #a6ca63;" href="/admin/cars">Cancel - go back to the list</a>
</form>
</div>

{% endblock %}
